<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DSSPActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên: Phùng Đức Mạnh"
        android:gravity="center_horizontal"
        android:textSize="17dp"
        android:background="#0073FF"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edtTenSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên sản phẩm"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/edtGiaSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Nhập giá sản phẩm"
        android:layout_margin="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThemSP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#08FF00"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:text="Thêm"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách sản phẩm"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvDanhSachSP"
        />


</LinearLayout>